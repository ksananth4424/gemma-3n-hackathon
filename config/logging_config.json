{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "detailed": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(funcName)s:%(lineno)d - %(message)s"
    },
    "simple": {
      "format": "%(levelname)s - %(message)s"
    },
    "colored": {
      "()": "colorlog.ColoredFormatter",
      "format": "%(log_color)s%(asctime)s - %(name)s - %(levelname)s - %(message)s",
      "log_colors": {
        "DEBUG": "cyan",
        "INFO": "green", 
        "WARNING": "yellow",
        "ERROR": "red",
        "CRITICAL": "red,bg_white"
      }
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "colored",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "logs/accessibility_assistant.log",
      "maxBytes": 10485760,
      "backupCount": 5
    },
    "error_file": {
      "class": "logging.handlers.RotatingFileHandler", 
      "level": "ERROR",
      "formatter": "detailed",
      "filename": "logs/errors.log",
      "maxBytes": 10485760,
      "backupCount": 3
    }
  },
  "loggers": {
    "accessibility_assistant": {
      "level": "DEBUG",
      "handlers": ["console", "file", "error_file"],
      "propagate": false
    },
    "ollama": {
      "level": "INFO",
      "handlers": ["file"],
      "propagate": false
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["console"]
  }
}
